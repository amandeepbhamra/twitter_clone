<div class="edit_profile_container">
	<div class="edit_profile_title">
		<h3>Following</h3>
	</div>

<ul class="nav nav-pills nav-stacked">
            <% (1..5).each do |i| %>
            <li>
            <div class="media tweetbox_padding border">
                <a class="pull-left" href="#">
                    <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="/assets/usertweet_profilepic.png">
                </a>
                <div class="media-body">
                    <h5 class="media-heading  border_bottom">
                        HCL Technologies <small>&#169; hcltech</small>
                    </h5>
                    
                    <% if !@following.nil? %> 
					<h5><%= @user.name %> is Following:</h5>
	
					<% @following.each do |user| %>
		
						<%= link_to user.name, user %>
						<%= link_to "Unfollow", unfollow_user_path(user) %>
		
				<% end %>
				<% else %>
			<h5><%= @user.name %> is not following to anyone.</h2>
		<% end %>

                  
                    <div class="btn btn-info"> Following </div>

                </div><!-- media-body -->
            </div><!-- media padding -->
            </li>

            <% end %>
            </ul>




<% if !@following.nil? %> 
	<h5><%= @user.name %> is Following:</h2>
	
	<% @following.each do |user| %>
		
			<%= link_to user.name, user %>
			<%= link_to "Unfollow", unfollow_user_path(user) %>
		
	<% end %>
<% else %>
	<h5><%= @user.name %> is not following to anyone.</h2>
<% end %>
</div>