<div class="span4">
    <div class="user_dashboard">
        <div class="userpic_wrapper">
            <div class="userpic">
                <%=link_to image_tag(@user.photo.url(:thumb)), "#", :class => "userpic_link_hover" %>
            </div><!-- userpic -->
                <% if !@user.name.nil? %>
                    <%=link_to @user.name, "#", :class => "username" %>
                <% else %>
                    <%=link_to @user.email, "#", :class => "username" %>
                <% end %>
                <br />
                <%=link_to "View My Profile page", "#", :class => "view_profile" %>
        </div><!-- userpic_wrapper -->
  
        <div class="homepage_tweets_wrapper">
            
                <% if @user==current_user %>
                    <%= link_to 'New Tweet',  new_user_tweet_path(@user) %> 
                <% end %>
                <%= link_to 'View Tweets',  user_tweets_path(@user) %>
                <%= link_to 'Follower',  followers_user_path(@user) %>
                <%= link_to 'Following',  following_user_path(@user), :class => "border_right" %>

            <div>
                <% if !(@user == current_user) %>
                    <%= link_to_if(@user.following?(current_user), "Unfollow", unfollow_user_path(@user)) do link_to 'Follow', 
                        follow_user_path(@user) end %>
                <% end %>
            </div>
            
        </div>


        <div class="new_tweet_container">
            <textarea rows="" placeholder="Compose new tweet &#8230;" 
            class="expand full_width" ></textarea>
        </div><!-- new_tweet_container -->

        <div class="row-fluid show-grid" >
            <div class="span4">
                <a href="#" class="btn choosen_file" rel="tooltip" data-placement="top" data-original-title="Choose file"></a>
                <a href="#" class="btn add_location" rel="tooltip" data-placement="top" data-original-title="Set Location"></a>
            </div>

            <div class="span4 offset4 right_align">
                <a class="btn btn-info tweet_btn"> Tweet</a>
            </div>
        </div><!-- row-fluid show-grid -->
    

        <div>
            <% if !(@user == current_user) %>
                <%= link_to_if(@user.following?(current_user), "Unfollow", unfollow_user_path(@user)) do link_to 'Follow', 
                    follow_user_path(@user) end %>
            <% end %>
        </div>

    </div><!-- user_dashboard -->

    <div class="map_container">
        
        <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@user.latitude},#{@user.longitude}&zoom=11&size=600x600&sensor=false" %>
        
        <!-- google map -->
    </div><!-- map_container -->
</div><!-- span4 -->

