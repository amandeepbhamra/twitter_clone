<div class="span4"></div>

<div class="span5">
  <div class="edit_profile_container">
    <div class="edit_profile_title">
      <h3>Profile</h3>
      <p class="subheading">This information appears on your public profile, search results, and beyond.
      </p>
    </div><!-- edit_profile_title -->

<div class="edit_profile_form_wrapper">
<%= form_for @user, :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
<div class="control-group">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">

    <%= f.label :photo, :class => "control-label" %>
    <%#= image_tag ('../assets/userthumbnail.jpeg'), :class => "img-polaroid" %>
    
    <%= f.file_field :photo, :class => "controls" %>
  </div>

  <div class="control-group">
    <%= f.label :name, :class => "control-label" %>
    <%= f.text_field :name, :class => "controls" %>
    <p>Enter your real name, so people you know can recognize you.</p>
  </div>
   <div class="control-group">
    <%= f.label :mobile, :class => "control-label" %>
    <%= f.text_field :mobile, :class => "controls" %>
    <p>Enter your Mobile Number, so people you know can recognize you.</p>
  </div>

  <div class="control-group">
    <%= f.label :location, :class => "control-label" %>
    <%= f.text_field :location, :class => "controls" %>
    <p>Where in the world are you?</p>
  </div>

  <div class="control-group">
    <%= f.label :bio, :class => "control-label" %>
    <%= f.text_area :bio, :rows=> 2, :cols => 50, :class => "controls" %>
    <p>About yourself in 160 characters or less.</p>
  </div>
  <div class="field">
    <%= f.label(:gender, "Male") %>
    <%= f.radio_button(:gender, "Male") %>

    <%= f.label(:gender, "Female") %>
    <%= f.radio_button(:gender, "Female") %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
</div><!-- edit_profile_form_wrapper -->
</div><!-- edit_profile_container -->
</div><!-- span5 -->

<form class="form-horizontal">
  <div class="control-group">
    <label class="control-label" for="inputEmail">Email</label>
    <div class="controls">
      <input type="text" id="inputEmail" placeholder="Email">
    </div>
</form>
