<div class="span4"></div>

<div class="span5">
  <div class="edit_profile_container">
    <div class="edit_profile_title">
      <h3>Profile</h3>
      <p class="subheading">This information appears on your public profile, search results, and beyond.
      </p>
    </div><!-- edit_profile_title -->

<div class="edit_profile_form_wrapper">
<%= form_for @user, :html => { :multipart => true } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <div class="user_profile_upload_pic">hel</div>
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
   <div class="field">
    <%= f.label :mobile %><br />
    <%= f.text_field :mobile %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, :rows=> 4, :cols => 40 %>
  </div>
  <div class="field">
    <%= f.label(:gender, "Male") %>
    <%= f.radio_button(:gender, "Male") %>

    <%= f.label(:gender, "Female") %>
    <%= f.radio_button(:gender, "Female") %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div><!-- edit_profile_form_wrapper -->
</div><!-- edit_profile_container -->
</div><!-- span5 -->