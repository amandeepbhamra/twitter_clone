<div class="span7">
    <div class="edit_profile_container">
        <div class="edit_profile_title">
            <h3>Profile</h3>
            <p class="subheading">
                This information appears on your public profile, search results, and beyond.
            </p>
        </div><!-- edit_profile_title -->
        <div class="edit_profile_form_wrapper">
            <%= form_for @user, :html => { :multipart => true, :class => 'well' } do |f| %>
            <div class="control-group">
                <% if @user.errors.any? %>
                <div id="error_explanation">
                    <h2>
                        <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
                    </h2>
                    <ul>
                        <% @user.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>
                <div class="field">
                    <%= f.label :photo, :class => "" %>
                    <%#= image_tag ('../assets/userthumbnail.jpeg'), :class => "img-polaroid" %>
                    <%= f.file_field :photo, :class => "span5" %>
                </div>
                <%= f.label :name, :class => "" %>
                <%= f.text_field :name, :class => "span5" %>
                <p>Enter your real name, so people you know can recognize you.</p>
                
                <%= f.label :mobile, :class => "" %>
                <%= f.text_field :mobile, :class => "span5" %>
                <p>Enter your Mobile Number, so people you know can recognize you.</p>
                
                <%= f.label :bio, :class => "" %>
                <%= f.text_area :bio, :rows=> 4, :cols => 800, :class => "span5" %>
                <p>About yourself in 160 characters or less.</p>
                
                <%= f.radio_button(:gender, "Male", :class => "radio padding_right") %>
                <%= f.label(:gender, "Male", :class => "radio inline padding_left") %>
                <%= f.radio_button(:gender, "Female", :class => "radio padding_right") %>
                <%= f.label(:gender, "Female", :class => "radio inline padding_left") %>
            
                <%= f.label :city, :class => "" %>
                <%= f.text_field :city, :class => "span5" %>
                
                <%= f.label :country, :class => "" %>
                <%= f.text_field :country, :class => "span5" %>

                <%= f.label :website, :class => "" %>
                <%= f.text_field :website, :class => "span5" %>
                
                <div class="actions controls">
                    <%= f.submit(:class => "btn btn-info update_btn_margintop") %>
                    <%= link_to 'Show', @user, :class => "btn controls" %>
                </div>
            </div>
            <% end %>
        </div><!-- edit_profile_form_wrapper -->
    </div><!-- edit_profile_container -->
</div><!-- span5 -->
