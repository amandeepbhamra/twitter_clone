<!DOCTYPE html>
<html>
	<head>
  		<title>Twitter</title>
  		<%= stylesheet_link_tag    "application", :media => "all" %>
  		<%= javascript_include_tag "application" %>
  		<%= csrf_meta_tags %>
      
	</head>

	<body data-spy="scroll" data-target=".bs-docs-sidebar">
    
     <%= render 'layouts/header' %>

		<div class="container padding_top">
		<div id='notice' style="<%= 'display: none; ' if flash[:notice].blank? %> text-align: center;">
        <%= flash[:notice].html_safe  unless flash[:notice].blank? %>
      </div><!-- notice -->
 
      <div id='error' style="<%= 'display: none;' if flash[:error].blank? %>  text-align: center;">
        <%= flash[:error].html_safe  unless flash[:error].blank? %>
      </div>
        <!-- error -->

    	<%= yield %>
    </div>
  </body>
</html>
