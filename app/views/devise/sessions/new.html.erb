<div class="row-fluid padding_top">

<div class="span7">
<h3>Welcome to Twitter.</h3>
<p>Find out whatâ€™s happening, right now, with the people and organizations you care about.</p>
</div>

<div class="span4"></div><!-- MIDDLE SPAN4 -->

<div class="span4">
<form class="form-signin">
        <h2 class="form-signin-heading">Sign in</h2>

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.label :email %><br />
  <%= f.email_field :email, :placeholder => "nitin@fizzysoftware.com", :class => "input-block-level" %>

  <%= f.label :password %><br />
  <%= f.password_field :password, :class => "input_width", :placeholder => "*********"  %>

<%= f.submit "Sign in", :class => "btn btn-info signin_btn" %>

  <% if devise_mapping.rememberable? -%>
        
            <%= f.check_box :remember_me, :class => "checkbox" %> 
            <%= f.label :remember_me %>
            
            
    <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "forgot_password" %><!-- forgot password -->
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => "signin_receive_confirmation" %>

  <% end -%><!-- remember me -->
<% end %>
<%= link_to "Sign up for twitter", new_registration_path(resource_name), :class => "signinpage_singup_btn" %>


        
        <label class="checkbox">
          <input type="checkbox" value="remember-me"> Remember me
        </label>
        
  
</div>
</div><!-- row-fluid -->