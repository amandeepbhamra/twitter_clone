<div class="span5 signin_page_margintop"></div>
<div class="span4">
	<h3>Sign up</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %><br />
  <%= f.email_field :email %>

  <%= f.label :password %><br />
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %>
  
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => "signup_receive_confirmation" %><br />

  <%= f.submit "Sign up", :class => "btn btn-info" %>
<% end %>


</div>