<div class="row-fluid padding_top">
<div class="span7">
    <div class="frnt_welcome_text">
        <h3>Welcome to Tweety Tweet Sign Up Page.</h3>
        <p>Find out whatâ€™s happening, right now, with the people and organizations you care about.</p>
    </div>
</div>
<div class="span4">
<div class="signin_background user_dashboard">
	<h3 class="form-signin-heading headingborder_color">Sign up</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %>
  <%= f.email_field :email, :class => "input-block-level"  %>

  <%= f.label :password %>
  <%= f.password_field :password, :class => "input-block-level"  %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :class => "input-block-level"  %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "forgot_password" %><!-- forgot password -->
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => "signup_receive_confirmation" %><br />
  <%= f.submit "Sign in", :class => "btn btn-info signin_btn" %>
  <%= f.submit "Sign up", :class => "signinpage_singup_btn btn" %>
<% end %>

</div>
</div>
</div>