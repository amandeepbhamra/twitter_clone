<%= form_for [@user, @tweet] do |f| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@tweet.errors.count, "error") %> prohibited this tweet from being saved:
      </h2>
      <ul>
        <% @tweet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  
  <div class="new_tweet_container">
    <%= f.text_area :content, :maxlength=>'140', :class => "expand full_width", :placeholder => "Compose new tweet" %> 
    <%= f.hidden_field :reply_tweet_id, :value => params[:reply_tweet_id] %> 
    <!-- <textarea rows="" placeholder="Compose new tweet &#8230;" class="expand full_width" ></textarea> -->
</div><!-- new_tweet_container -->

<div class="row-fluid show-grid" >
    <div class="span4">
        <a href="#" class="btn choosen_file" rel="tooltip" data-placement="top" data-original-title="Choose file"></a>
        <a href="#" class="btn add_location" rel="tooltip" data-placement="top" data-original-title="Set Location"></a>
    </div>
    <div class="span4 offset4 right_align">
      <%= f.submit 'Tweet', :class =>"btn btn-info tweet_btn" %>
        <!-- <a class="btn btn-info tweet_btn"> Tweet</a> -->
    </div>
</div><!-- row-fluid show-grid -->
<% end %>